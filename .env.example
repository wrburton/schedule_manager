# Application settings
APP_NAME="Calendar Checklist"
DEBUG=false
SECRET_KEY=your-secret-key-here-change-in-production

# Server settings
HOST=0.0.0.0
PORT=8000
# Comma-separated list of allowed origins for CORS, or "*" for all
ALLOWED_ORIGINS=*

# Database
DATABASE_URL=sqlite:///./calendar_checklist.db

# Google Calendar API
# Get these from Google Cloud Console: https://console.cloud.google.com/
# Application type: Desktop app (NOT Web application)
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# Refresh token - obtain by running: python scripts/get_token.py
GOOGLE_REFRESH_TOKEN=

# Calendar to sync (use "primary" for main calendar, or calendar ID for shared/family calendar)
# Find calendar ID in Google Calendar settings > "Integrate calendar"
GOOGLE_CALENDAR_ID=primary

# Sync interval in minutes
SYNC_INTERVAL_MINUTES=5
